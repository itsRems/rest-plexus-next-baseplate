{
	"compilerOptions": {
		"lib": ["ESNext"],
		"target": "ESNext",
		"module": "commonjs",
		"strict": false,
		"rootDir": "src",
		"outDir": "dist",
		"sourceMap": true,
		"declaration": true,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"esModuleInterop": true,
		"skipLibCheck": true
	},
	"include": ["src"],
	"exclude": ["node_modules"]
}
