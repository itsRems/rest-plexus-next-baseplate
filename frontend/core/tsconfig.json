{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"lib": ["DOM", "ESNext"],
		"moduleResolution": "node",
		"noEmit": true,
		"strict": false,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"isolatedModules": true
	},
	"exclude": ["node_modules"],
	"include": ["**/*.ts"]
}
